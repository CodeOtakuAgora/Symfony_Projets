{% extends 'base.html.twig' %}

{% block title %}Affichage de l'animal{% endblock %}

{% block monTitre %}Affichage de l'animal{% endblock %}

{% block body %}
    <div class="row align-items-center">
        <div class="col-2 text-center">
            <img src="{{ asset('images/' ~ animal.image) }}">
        </div>
        <div class="col-auto">
            <h2>{{ animal.nom }}</h2>
            <div>Description : {{ animal.description }}</div>
            <div>Poids : {{ animal.poids }}</div>
            <div>Dangereux : 
                {% if animal.dangereux %}
                    <span class="badge badge-danger">OUI</span>
                {% else %}
                <span class="badge badge-success">NON</span>
                {% endif %}    
            </div>
            <div>
                <a class="btn btn-primary" href="{{ path('afficher_famille', {'id' : animal.famille.id}) }}"> 
                    {{ animal.famille.libelle }}
                </a>
            </div>
            <div>
                <h2>Présence de l'animal sur les continents : </h2>
                {% for continent in animal.continents %}
                    <a href="{{ path('afficher_continent', {'id' : continent.id}) }}" class="btn btn-warning">{{ continent.libelle }} </a>
                {% endfor %}
            </div>
            <div>
                <h2>Présence du maître de l'animal : </h2>
                {% for dispose in animal.disposes %}
                    <a href="{{ path('afficher_personne', {'id' : dispose.personne.id}) }}" class="btn btn-info">
                        {{ dispose.personne.nom }}
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
